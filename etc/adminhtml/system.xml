<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Backend/etc/system_file.xsd">
    <system>
        <tab id="dotsquare" translate="label" sortOrder="100">
            <label>Dotsquare</label>
        </tab>
        <section id="responsivebannerslider" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Responsive Banner Slider</label>
            <tab>dotsquare</tab>
            <resource>Dotsquare_Banner::banner_config</resource>
				<group id="setting" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Responsive Banner Slider - Settings</label>
					<field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enabled</label> 
						<comment>Select Yes for display the Responsive Banner Slider on frontend.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					
					<field id="cms_page" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Show in CMS Pages</label> 
						<comment>Select Yes for display the Responsive Banner Slider on frontend for Selected CMS Pages.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="category_page" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Show in Category Pages</label> 
						<comment>Select Yes for display the Responsive Banner Slider on frontend for Selected Category Pages.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="product_page" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Show in Product Pages</label> 
						<comment>Select Yes for display the Responsive Banner Slider on frontend for Selected Product Pages.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
			    </group>
			   	<!-- <group id="support" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Info</label>
					<field id="style" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Info</label> 
						<frontend_model>Magebees\Responsivebannerslider\Block\Adminhtml\System\Config\Support</frontend_model>
					</field>
				</group> -->
        </section>
    </system>
</config>
